<Window x:Class="Shuyu.PinnedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PinnedWindow"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Background="Transparent"
        AllowsTransparency="True"
        Topmost="True"
        Focusable="True">
    <Grid>
        <!-- 目立たせるためのハイライト枠（フェードアウト） -->
        <Border x:Name="HighlightBorder"
                BorderBrush="#FF00BFFF"
                BorderThickness="4"
                CornerRadius="2"
                Opacity="1"
                Margin="-2">
            <Border.Effect>
                <DropShadowEffect Color="#8800BFFF" BlurRadius="12" ShadowDepth="0" Opacity="0.8"/>
            </Border.Effect>
        </Border>
        <!-- 画像本体 -->
        <Image x:Name="PinnedImage" Stretch="None" SnapsToDevicePixels="True"/>
    </Grid>
</Window>
